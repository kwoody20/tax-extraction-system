# Tax Extractor API Configuration
# Copy this file to .env and update with your values

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
LOG_LEVEL=info

# Security
API_SECRET_KEY=your-secret-key-here-minimum-32-chars
API_TOKEN_EXPIRE_MINUTES=30
API_ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
TRUSTED_HOSTS=localhost,yourdomain.com

# Redis Configuration (optional - falls back to in-memory if not available)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_EXTRACTION=10/minute

# Extraction Settings
TAX_EXTRACTOR_HEADLESS=true
TAX_EXTRACTOR_BROWSER=chrome
TAX_EXTRACTOR_MAX_WORKERS=5
TAX_EXTRACTOR_OUTPUT_DIR=output
TAX_EXTRACTOR_LOG_LEVEL=INFO

# Job Processing
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_SECONDS=300
JOB_RETENTION_DAYS=7
ENABLE_WEBHOOKS=true

# File Storage
UPLOAD_MAX_SIZE_MB=50
TEMP_FILE_RETENTION_HOURS=24
OUTPUT_FORMATS=excel,json,csv,parquet

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=60
ALERT_EMAIL=admin@yourdomain.com

# Database (optional - for persistent storage in production)
DATABASE_URL=postgresql://user:password@localhost/taxextractor
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# External Services (optional)
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_COUNT=3
SLACK_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=noreply@yourdomain.com

# Development/Testing
DEBUG=false
TESTING=false
MOCK_EXTRACTION=false