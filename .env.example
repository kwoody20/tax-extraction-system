# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-change-this-in-production
API_BEARER_TOKEN=your-bearer-token-change-this
ENVIRONMENT=development

# CORS Settings
ENABLE_CORS=true
CORS_ORIGINS=*

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
USE_REDIS=false

# Database (optional)
DATABASE_URL=postgresql://user:password@localhost/taxdb

# Extraction Settings
MAX_WORKERS=4
TIMEOUT_SECONDS=30
MAX_RETRIES=3
BATCH_SIZE=10
HEADLESS_BROWSER=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# File Storage
UPLOAD_DIR=uploads
RESULTS_DIR=results
MAX_UPLOAD_SIZE_MB=50

# Job Settings
JOB_RETENTION_DAYS=7
MAX_CONCURRENT_JOBS=10
DEFAULT_PRIORITY=5

# Webhook Settings
ENABLE_WEBHOOKS=false
WEBHOOK_TIMEOUT=10

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@taxextractor.com
ENABLE_EMAIL_NOTIFICATIONS=false